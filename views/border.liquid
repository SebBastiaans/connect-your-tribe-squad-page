{% render 'partials/head.liquid', title: 'Squad page' %}

<ul class="filter">
  <li class="name">
    <a href="/">Naam</a>
  </li>
  <li class="birthdate">
    <a href="/birthdate">Geboorte datum</a>
  </li>
  <li class="border">
    <div>
    <a class="bold" href="/border-radius">Ronde hoek</a>
    <a class="bold" href="/border-radius">H - R</a>
    <a href="/border-radius-groot-klein">R - H</a>
    </div>
  </li>
  <li class="search">
    <form action="">
      <input type="search" placeholder="Search...">
    </form>
  </li>
</ul>

<ul class="students">
  {% for person in persons %}
    <li class="student-card"> 
      <div style="border-radius: {{ person.fav_border_radius }}px;background-color: {{ person.fav_color }}">
      <a href="{{ person.profilecard }}">{{ person.name }}</a>
      <p>{{ person.birthdate | date: '%d-%m-%Y'}}</p>
      </div>

      <img
        class="person-img"
        loading="lazy"
        {% if person.mugshot %}
          src="{{'https://fdnd.directus.app/assets/' | append:  person.mugshot | append:'?width=300' }}"
        {% else %}
          src="{{ person.avatar }}"
        {% endif %}
        alt="{{ person.name }}"
      >
    
    </li>
  {% endfor %}
</ul>


{% render 'partials/foot.liquid', squads: squads %}